      <h2><%= firm.name %></h2>
      <ul>
        <li class="address">
          <span><%= firm.address1 %></span>
          <span><%= firm.address2 %></span>
          <span><%= firm.address3 %></span>
          <span><%= firm.city %></span>
          <span><%= firm.state %></span>
          <span><%= firm.zip %></span>
        </li>
        <li class="phone">
          <%= firm.phone %>
        </li>
        <li class="email">
          <%= link_to "mailto:#{firm.email}", firm.email %>
        </li>
      </ul>
    </li>
  <% end %>
  </ul>

  <h1> Principals </h1>

  <ul class="lobbyists">
  <% @principals.each do |principal| %>
    <li class="lobbyist">
      <h2><%= principal.name %></h2>
      <ul>
        <li class="address">
          <span><%= principal.address1 %></span>
          <span><%= principal.address2 %></span>
          <span><%= principal.address3 %></span>
          <span><%= principal.city %></span>
          <span><%= principal.state %></span>
          <span><%= principal.zip %></span>
        </li>
        <li class="phone">
          <%= principal.phone %>
        </li>
        <li class="email">
          <%= link_to "mailto:#{principal.email}", principal.email %>
        </li>
      </ul>
    </li>
  <% end %>
  </ul>

</div>
